package views

templ themeController() {
	<script>
		function toggleDarkMode() {

			const darkModeOn = document.documentElement.classList.contains('dark')
			if(darkModeOn) {
				document.documentElement.classList.remove('dark')
			} else {
				document.documentElement.classList.add('dark')
			}
		}
	</script>
	<button class="" onclick="toggleDarkMode()">Theme Switcher</button>
}

templ columnCard(title string) {
	<div class="border border-zinc-200 dark:border-zinc-900 rounded bg-zinc-50 dark:bg-zinc-800">
		<div class="p-0 gap-0">
			<h2 class="pt-3 pb-2 px-4 text-sm lg:text-base text-nowrap text-zinc-600 dark:text-zinc-400">{ title }</h2>
			{ children... }
		</div>
	</div>
}

