templ feature() {
	<div class="relative group/feature flex cursor-pointer gap-6 py-2 px-4 hover:bg-zinc-200/60 dark:hover:bg-zinc-900/50">
		<div class="w-6">
			<button type="button" class="group/upvote peer/upvote h-6 min-h-6 w-6 p-1.5 mt-0.5 transition-colors border border-zinc-400 hover:bg-zinc-600 hover:border-zinc-600 dark:border-zinc-500 dark:hover:bg-zinc-300 dark:hover:border-zinc-300 rounded">
				@upArrowIcon()
			</button>
			<div class="pt-1 text-center flex justify-center w-full text-zinc-600 dark:text-zinc-400 transition-colors peer-hover/upvote:text-zinc-800 dark:peer-hover/upvote:text-zinc-300">
				<p class=" text-[.6rem]">1,000,000</p>
			</div>
		</div>
		<div>
			<h4 class="text-xs font-bold text-zinc-700 dark:text-zinc-200 pb-1">Feature Title is Cool I Guess for length</h4>
			<p class="text-[.6rem] text-zinc-500 dark:text-zinc-400">Describe the feature in a little bit of detail right here so they get an idea of what this could doi and how it could help them out</p>
		</div>
		<span class="absolute h-px w-[calc(100%-1.5rem)] -bottom-px left-1/2 transform -translate-x-1/2 bg-zinc-200 dark:bg-zinc-700 group-hover/feature:w-full"></span>
		<span class="absolute h-px w-[calc(100%-1.5rem)] top-0 left-1/2 transform -translate-x-1/2 bg-zinc-200 dark:bg-zinc-700 group-hover/feature:w-full"></span>
	</div>
}

templ Roadmap() {
	@Base() {
		@themeController()
		<div class="md:grid md:grid-cols-4 md:gap-2 p-4">
			for _, val := range []string{"Under Consideration", "Planned", "Rejected", "Completed"} {
				@columnCard(val) {
					for i := 0; i < 100; i++ {
						@feature()
					}
				}
			}
		</div>
	}
}
